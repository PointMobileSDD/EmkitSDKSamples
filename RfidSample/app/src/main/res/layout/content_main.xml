            <!--        </LinearLayout>-->

            <RelativeLayout
                android:id="@+id/relative_rfid_demo"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/black_16_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:text="@string/launcher_rfid_demo" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#e3e3e3" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_set_channel"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/black_16_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:text="Set Channel" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#e3e3e3" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_single_search"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/black_16_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:text="Single Search" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#e3e3e3" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_multi_search"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/black_16_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:text="@string/multi_search" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#e3e3e3" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_wildcard_search"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/black_16_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:text="@string/wildcard_search" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#e3e3e3" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_data_format"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/black_16_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:text="@string/data_format" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#e3e3e3" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative_device_500"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/black_16_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="RFID Controller\n Pointmobile" />
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>