<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_half_margin"
    android:paddingLeft="@dimen/activity_half_margin"
    android:paddingRight="@dimen/activity_half_margin"
    android:paddingTop="@dimen/activity_half_margin" >

    <LinearLayout
        android:id="@+id/layout_msr_status"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dip"
            android:layout_height="match_parent"
            android:text="@string/hint_msr_status" />

        <TextView
            android:id="@+id/textViewMsrStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/hint_msr_status_value"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_msr_track1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dip"
            android:layout_height="match_parent"
            android:text="@string/hint_msr_track1" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false" >

            <TextView
                android:id="@+id/textViewMsrTrack1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_msr_track"
                android:textSize="16sp"
                android:textStyle="bold" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_msr_track2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dip"
            android:layout_height="match_parent"
            android:text="@string/hint_msr_track2" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false" >

            <TextView
                android:id="@+id/textViewMsrTrack2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_msr_track"
                android:textSize="16sp"
                android:textStyle="bold" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_msr_track3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dip"
            android:layout_height="match_parent"
            android:text="@string/hint_msr_track3" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false" >

            <TextView
                android:id="@+id/textViewMsrTrack3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_msr_track"
                android:textSize="16sp"
                android:textStyle="bold" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_msr_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dip"
            android:layout_height="match_parent"
            android:text="@string/label_read_result" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textViewMsrResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_msr_result"
                android:textSize="16sp"
                android:textStyle="bold" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/check_auto_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_auto_scan"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_card_reader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_read_start"
            android:textAppearance="?android:attr/textAppearance" />
    </LinearLayout>

</LinearLayout>
